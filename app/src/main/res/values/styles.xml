<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/primaryDark</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="actionBarTitleFont" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/font_actionbar</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TitleFont" parent="TextAppearanceMedium">
        <item name="android:textColor">@color/font_dark</item>
    </style>

    <style name="ListItemTitleFont" parent="TextAppearanceMedium">
        <item name="android:textColor">@color/font_dark</item>
    </style>

    <style name="ListItemDescriptionFont" parent="TextAppearanceMedium">
        <item name="android:textColor">@color/font_light</item>
    </style>

    <style name="ListHeaderFont" parent="TextAppearanceSmall">
        <item name="android:textColor">@color/font_dark</item>
    </style>

    <style name="SwitchTextAppearance" parent="@android:style/TextAppearance.Holo.Small">
        <item name="android:textColor">@color/font_white</item>
    </style>

    <style name="TextAppearanceMedium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearanceSmall">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
